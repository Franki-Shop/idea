    script.
      var file = location.pathname.split( "/" ).pop();
      var link = document.createElement( "link" );
      link.href = file.substr( 0, file.lastIndexOf( "." ) ) + "css/carousel.css";
      link.type = "text/css";
      link.rel = "stylesheet";
      link.media = "screen,print";
      document.getElementsByTagName( "head" )[0].appendChild( link );
      carousel = (function(){
      var box = document.getElementById('c');
      var controls = document.getElementById('d');
      controls.style.display = 'block';
      var next = document.getElementById('n');
      var prev = document.getElementById('p');
      var items = box.getElementsByClassName('c_d');
      var counter = 0;
      var amount = items.length;
      var current = items[0];
      function navigate(direction) {
      current.classList.remove('c_a');
      counter = counter + direction;
      if (direction === -1 &&
      counter < 0) {
      counter = amount - 1;
      }
      if (direction === 1 &&
      !items[counter]) {
      counter = 0;
      }
      current = items[counter];
      current.classList.add('c_a');
      }
      next.addEventListener('click', function(ev) {
      navigate(1);
      });
      prev.addEventListener('click', function(ev) {
      navigate(-1);
      });
      navigate(0);
      })();
